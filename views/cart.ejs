                    <div class="cart-summary">
                        <h5>Total Price: <span id="total-price">
                                <% totalPrice=0; %>
                                    <% for (let i=0; i < usercart.length; i++) { %>
                                        <% const itemPrice=parseFloat(usercart[i].price); %>
                                            <% if (!isNaN(itemPrice)) { %>
                                                <% totalPrice +=usercart[i].quantity * itemPrice; %>
                                                    <% } %>
                                                        <% } %>
                                                            ₹<%= totalPrice.toFixed(2) %>
                            </span></h5>

