          loading="lazy" /> -->
          <h3>E- <span style="color: red;">CART</span></h3>
        </a>
        <!-- Left links -->

        <!-- Left links -->
      </div>
      <!-- Collapsible wrapper -->



      <!-- Avatar -->

      <a class=" d-flex align-items-center " href="/userlogin" id="navbarDropdownMenuAvatar" role="button"
        data-mdb-toggle="tooltip" title="Login">
        <i class="fas fa-circle-user " style="font-size: 2em;"></i>

      </a>

    </div>

    <!-- Right elements -->
    </div>
    <!-- Container wrapper -->
  </nav>
  <% if (typeof message !== 'undefined') { %>
    <div class="alert alert-danger text-center">
        <%= message %>
    </div>
<% } %>
  <div class="login-container mt-5">
    <div class="logo">
      <img src="img/ECART.png" alt="Logo">
    </div>
    <form action="/newpasswordpost" method="post">
        <div class="form-group">
          <label for="email">New Password</label>
          <input type="password" name="newpass1">
          <span id="new-password-error" class="error-message">New Password is required</span>
        </div>
        <div class="form-group">
          <label for="password">Confirm Password</label>
          <input class="password" type="password" name="newpass2">
          <span id="confirm-password-error" class="error-message">Confirm Password is required</span>
          <span id="password-match-error" class="error-message">Passwords do not match</span>
        </div>
        <button type="submit" class="login-button">Login</button>
      </form>
      
   
<!-- 
    <% if(typeof message !== 'undefined') { %>
    <div class="alert alert-danger">
      <%= message %>
    </div>
    <% } %> -->
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      document.querySelector('form').addEventListener('submit', function(event) {
        var newPasswordInput = document.querySelector('input[name="new-password"]');
        var confirmPasswordInput = document.querySelector('input[name="confirm-password"]');
        var newPasswordErrorMessage = document.querySelector('#new-password-error');
        var confirmPasswordErrorMessage = document.querySelector('#confirm-password-error');
        var passwordMatchErrorMessage = document.querySelector('#password-match-error');
  
        // Reset error messages
        newPasswordErrorMessage.style.display = 'none';
        confirmPasswordErrorMessage.style.display = 'none';
        passwordMatchErrorMessage.style.display = 'none';
  
        // Check if new password is null or empty
        if (!newPasswordInput.value) {
          newPasswordErrorMessage.style.display = 'block';
          event.preventDefault(); // Prevent form submission
        }
  
        // Check if confirm password is null or empty
        if (!confirmPasswordInput.value) {
          confirmPasswordErrorMessage.textContent = 'Please confirm your password.';
          confirmPasswordErrorMessage.style.display = 'block';
          event.preventDefault(); // Prevent form submission
        }
  
        // Check if password and confirm password match
        if (newPasswordInput.value !== confirmPasswordInput.value) {
          passwordMatchErrorMessage.textContent = 'Passwords do not match.';
          passwordMatchErrorMessage.style.display = 'block';
          event.preventDefault(); // Prevent form submission
        }
      });
    });
  </script>
  
  
</body>

</html>
