  <h1 class="ms-5">Update Profile</h1>
  <div class="row container ms-5 mt-5">
    <form class="col s12" action="/updateprofile/<%= userdata._id %>" method="post" enctype="multipart/form-data">
      <div class="row">
        <div class="input-field col s12 m12 l6">
          <input id="username" name="username" type="text" value="<%= userdata.username %> " required>
          <label for="username">Username</label>
        </div>
     
    </div>
    <div class="mb-3">
        <label for="UrunImage" class="form-label">Profile Images</label>
        <input name="img" type="file" accept="image/*" class="form-control" onchange="previewimg(event)">

       </div>
       <div id="preview"></div>
      <button class="waves-effect waves-light btn right" type="submit">Submit</button>
    </form>
    <% if(typeof message !== 'undefined') { %>
        <div class="alert alert-danger">
          <%= message %>
        </div>
        <% } %>
        <script>
          function previewimg(event){
         let image=URL.createObjectURL(event.target.files[0]);
          let imgdiv=document.getElementById('preview')
         let newimage=document.createElement('img')
          imgdiv.innerHTML=""
          newimage.src=image
         newimage.width="200"
         imgdiv.appendChild(newimage)
          }
        </script>
