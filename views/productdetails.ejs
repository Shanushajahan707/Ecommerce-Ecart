    height: 300px;
  }

  .img-showcase {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }

  .img-showcase img {
    width: 100%;
    /* Set a common width for the images */
    height: auto;
    /* Maintain the aspect ratio */
    display: block;
    /* Remove extra space below inline-block images */
  }

  /* Center the images horizontally */
  .img-display {
    overflow: hidden;
  }
</style>

